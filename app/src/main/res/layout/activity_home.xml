<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kseniyaturava.mytest.MainActivity">
<!--android:background="#9DAECE"-->
    <!--inside id added for fragments(there're more options)-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:maxWidth="120dp"
                    android:minHeight="150dp"
                    android:minWidth="120dp"
                    design:srcCompat="@drawable/matrix1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:maxWidth="120dp"
                    android:minHeight="150dp"
                    android:minWidth="120dp"
                    design:srcCompat="@drawable/blade2" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:maxWidth="120dp"
                    android:minHeight="150dp"
                    android:minWidth="120dp"
                    design:srcCompat="@drawable/blade19" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:maxWidth="120dp"
                    android:minHeight="150dp"
                    android:minWidth="120dp"
                    design:srcCompat="@drawable/matrix1" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:maxWidth="120dp"
                    android:minHeight="150dp"
                    android:minWidth="120dp"
                    design:srcCompat="@drawable/matrix1" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:maxWidth="120dp"
                    android:minHeight="150dp"
                    android:minWidth="120dp"
                    design:srcCompat="@drawable/blade2" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:maxWidth="120dp"
                    android:minHeight="150dp"
                    android:minWidth="120dp"
                    design:srcCompat="@drawable/blade19" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:maxWidth="120dp"
                    android:minHeight="150dp"
                    android:minWidth="120dp"
                    design:srcCompat="@drawable/matrix1" />


            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:text="Hello World!"/>

