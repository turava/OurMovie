<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_postBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/indivdual_box"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_User"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:contentDescription="imagen"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:src="@drawable/imguser"/>

            <LinearLayout
                android:id="@+id/layout_datosUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nombre"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="fecha"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvComent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="4"
            android:maxLength="180"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="comentario"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="120dp"
            android:id="@+id/layout_botones"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btReply"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="boton"
                android:background="#ffffff"
                android:src="@drawable/ic_reply" />

            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Responde a este comentario"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_acordeon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_replyAcordeon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="top"
                    android:background="@drawable/line_top_foro" />

                <LinearLayout
                    android:id="@+id/layout_photoUser"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_userReply"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="false"
                        android:contentDescription="@string/todo"
                        android:cropToPadding="false"
                        android:scaleType="fitXY"
                        design:srcCompat="@drawable/blade19" />

                    <LinearLayout
                        android:id="@+id/layout_userReply"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_usernameReply"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="García Lorca"
                            android:textColor="@color/background2"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_dateReply"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hoy a las 17:00" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="El año que viene saldrá la 7a, estoy impaciente..."
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_inputReply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="top"
                    android:background="@drawable/line_top_foro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_fileReply"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:layout_weight="1"
                            design:srcCompat="@drawable/blade19" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:layout_weight="1"
                            design:srcCompat="@drawable/blade2" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/button_addFilesReply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorBlanco"
                            android:contentDescription="@string/icon_addfile"
                            android:paddingTop="6dp"
                            design:srcCompat="@drawable/ic_file" />

                        <LinearLayout
                            android:id="@+id/layout_2inputReply"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/botton_style"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <AutoCompleteTextView
                                android:id="@+id/input_reply"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:hint="@string/mensaje"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:textColor="@color/background2"
                                android:textColorHighlight="@android:color/transparent"
                                android:textColorLink="@color/foroButton"
                                android:textCursorDrawable="@color/foroButton" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/button_sendReply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorBlanco"
                            android:contentDescription="@string/icon_sendMessage"
                            design:srcCompat="@android:drawable/ic_menu_send" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>