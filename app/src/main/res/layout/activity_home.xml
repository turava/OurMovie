<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    tools:context="com.example.kseniyaturava.mytest.MainActivity">
    <!--android:background="#9DAECE"-->
    <!--inside id added for fragments(there're more options)-->

    <ScrollView
        style="@android:style/Widget.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:id="@+id/layout_content_vert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_content-hor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/title_popular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:lineSpacingExtra="8sp"
                    android:text="POPULAR"
                    android:textColor="@color/colorBlanco"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitle_popular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/amiko"
                    android:text="Descubre los foros con más interacción"
                    android:textAlignment="viewStart"
                    android:textColor="#f5f5f5"
                    android:textSize="16sp" />

                <HorizontalScrollView
                    android:id="@+id/Hscroll_popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">


                    <LinearLayout
                        android:id="@+id/scroll_popularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:maxHeight="160dp"
                            android:maxWidth="120dp"
                            android:minHeight="160dp"
                            android:minWidth="120dp"
                            design:srcCompat="@drawable/matrix1" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:maxHeight="160dp"
                            android:maxWidth="120dp"
                            android:minHeight="160dp"
                            android:minWidth="120dp"
                            design:srcCompat="@drawable/blade2" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:maxHeight="160dp"
                            android:maxWidth="120dp"
                            android:minHeight="160dp"
                            android:minWidth="120dp"
                            design:srcCompat="@drawable/blade19" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:maxHeight="160dp"
                            android:maxWidth="120dp"
                            android:minHeight="160dp"
                            android:minWidth="120dp"
                            design:srcCompat="@drawable/matrix1" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:maxHeight="160dp"
                            android:maxWidth="120dp"
                            android:minHeight="160dp"
                            android:minWidth="120dp"
                            design:srcCompat="@drawable/matrix1" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:maxHeight="160dp"
                            android:maxWidth="120dp"
                            android:minHeight="160dp"
                            android:minWidth="120dp"
                            design:srcCompat="@drawable/blade2" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:maxHeight="160dp"
                            android:maxWidth="120dp"
                            android:minHeight="160dp"
                            android:minWidth="120dp"
                            design:srcCompat="@drawable/blade19" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:maxHeight="160dp"
                            android:maxWidth="120dp"
                            android:minHeight="160dp"
                            android:minWidth="120dp"
                            design:srcCompat="@drawable/matrix1" />


                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/title_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:lineSpacingExtra="8sp"
                    android:text="NOVEDADES"
                    android:textColor="@color/colorBlanco"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- <TextView
            android:id="@+id/description_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:fontFamily="@font/amiko"
            android:text="Descubre los foros con más interacción"
            android:textAlignment="viewStart"
            android:textColor="@color/colorBlanco"
            android:textSize="18sp" />-->


                <HorizontalScrollView
                    android:id="@+id/Hscroll_new"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_new1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="false"
                                android:cropToPadding="true"
                                android:scaleType="center"
                                design:srcCompat="@drawable/pie" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_new2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="false"
                                android:cropToPadding="true"
                                android:scaleType="center"
                                design:srcCompat="@drawable/blade2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_new3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="false"
                                android:cropToPadding="true"
                                android:scaleType="center"
                                design:srcCompat="@drawable/star" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/title_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:lineSpacingExtra="8sp"
                    android:text="CATEGORÍAS"
                    android:textColor="@color/colorBlanco"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitle_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:fontFamily="@font/amiko"
                    android:lineSpacingExtra="8sp"
                    android:text="Entra y descubre más películas"
                    android:textColor="@color/colorBlanco"
                    android:textSize="16sp" />

                <HorizontalScrollView
                    android:id="@+id/Hscroll_category"
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:clipChildren="false">


                    <LinearLayout
                        android:id="@+id/scroll_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_drama"
                            android:layout_width="120dp"
                            android:layout_height="190dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/button_drama"
                                android:layout_width="120dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/botton_style"
                                android:fontFamily="@font/amiko"
                                android:text="Drama"
                                android:textAllCaps="false"
                                android:textColor="#0077FF" />

                            <ImageView
                                android:id="@+id/img_drama"
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                android:maxHeight="160dp"
                                android:maxWidth="120dp"
                                android:minHeight="160dp"
                                android:minWidth="120dp"
                                design:srcCompat="@drawable/american" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_comedy"
                            android:layout_width="120dp"
                            android:layout_height="190dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/button_comedy"
                                android:layout_width="120dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/botton_style"
                                android:fontFamily="@font/amiko"
                                android:text="Comedia"
                                android:textAllCaps="false"
                                android:textColor="#0077FF" />

                            <ImageView
                                android:id="@+id/img_comedy"
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                android:maxHeight="160dp"
                                android:maxWidth="120dp"
                                android:minHeight="160dp"
                                android:minWidth="120dp"
                                design:srcCompat="@drawable/pie" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_fiction"
                            android:layout_width="120dp"
                            android:layout_height="190dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/button_fiction"
                                android:layout_width="120dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/botton_style"
                                android:fontFamily="@font/amiko"
                                android:text="Ficción"
                                android:textAllCaps="false"
                                android:textColor="#0077FF" />

                            <ImageView
                                android:id="@+id/img_fiction"
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                android:maxHeight="160dp"
                                android:maxWidth="120dp"
                                android:minHeight="160dp"
                                android:minWidth="120dp"
                                design:srcCompat="@drawable/matrix1" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_horror"
                            android:layout_width="120dp"
                            android:layout_height="190dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/button_horror"
                                android:layout_width="120dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/botton_style"
                                android:fontFamily="@font/amiko"
                                android:text="Terror"
                                android:textAllCaps="false"
                                android:textColor="#0077FF" />


                            <ImageView
                                android:id="@+id/img_horror"
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                android:maxHeight="160dp"
                                android:maxWidth="120dp"
                                android:minHeight="160dp"
                                android:minWidth="120dp"
                                design:srcCompat="@drawable/blade19" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/title_actor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:lineSpacingExtra="8sp"
                    android:text="ACTORES"
                    android:textColor="@color/colorBlanco"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitle_actor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/amiko"
                    android:text="Descubre más sobre los actores"
                    android:textAlignment="viewStart"
                    android:textColor="#f5f5f5"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <FrameLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_gravity="bottom"
        android:background="#ffff">

        <!--shadow.xml inside-->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="top"
            android:background="@drawable/shadow" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu_navigation" />
        <!-- android:layout_height="wrap_content"
         ALT+ENTER on design to add namespaces-->
        <!---->
    </FrameLayout>
    <!--</RelativeLayout>-->
</android.support.design.widget.CoordinatorLayout>
