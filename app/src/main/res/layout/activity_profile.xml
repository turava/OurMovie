<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kseniyaturava.mytest.MainActivity"
   ><!-- android:theme="@style/CustomTheme"-->


    <!--inside id added for fragments(there're more options)-->

   <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_userData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    design:srcCompat="@drawable/american" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/title_profile"
                        android:text="@string/username"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Cuenta sobre ti" />
                </LinearLayout>

            </LinearLayout>

            <TabHost
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/TabWidgetTheme">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/botton_style" />

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/tab2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!--  <ListView
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:id="@+id/listView"
                                   android:gravity="center"
                                   android:columnWidth="136dp"
                                   android:numColumns="3"
                                   android:verticalSpacing="1dp"
                                   android:horizontalSpacing="1dp"
                                   android:stretchMode="spacingWidthUniform"
                                   android:layout_alignParentLeft="true"
                                   android:layout_alignParentStart="true"
                                   android:layout_alignParentTop="true" />-->


                            <LinearLayout
                                android:id="@+id/layout_list1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/botton_style"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_list1"
                                    android:layout_width="10dp"
                                    android:layout_height="70dp"
                                    android:layout_weight="1"
                                    android:contentDescription="@string/img_list2"
                                    android:scaleType="fitXY"
                                    design:srcCompat="@drawable/blade19" />

                                <LinearLayout
                                    android:id="@+id/layout_descriptionList1"
                                    android:layout_width="220dp"
                                    android:layout_height="70dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text_title1"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:layout_weight="1"
                                        android:paddingStart="10dp"
                                        android:paddingTop="2dp"
                                        android:text="@string/movie_title"
                                        android:textColor="@color/colorBlack"
                                        android:textStyle="bold"
                                        tools:ignore="NestedWeights,RtlSymmetry" />

                                    <LinearLayout
                                        android:id="@+id/layout_icons1"
                                        android:layout_width="90dp"
                                        android:layout_height="20dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageButton
                                            android:id="@+id/icon_comments1"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@color/colorBlanco"
                                            design:srcCompat="@android:drawable/sym_action_chat" />

                                        <TextView
                                            android:id="@+id/text_numberComments1"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:contentDescription="@string/num_comments"
                                            android:paddingTop="6dp"
                                            android:text="@string/num_comments" />

                                    </LinearLayout>


                                </LinearLayout>

                                <ImageButton
                                    android:id="@+id/img_GoForo"
                                    android:layout_width="10dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorBlanco"
                                    android:contentDescription="@string/button_right"
                                    design:srcCompat="@drawable/ic_right48" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_list2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/botton_style"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_list2"
                                    android:layout_width="10dp"
                                    android:layout_height="70dp"
                                    android:layout_weight="1"
                                    android:contentDescription="@string/img_list3"
                                    android:scaleType="fitXY"
                                    design:srcCompat="@drawable/blade19" />

                                <LinearLayout
                                    android:id="@+id/layout_descriptionList2"
                                    android:layout_width="220dp"
                                    android:layout_height="70dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text_title2"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:layout_weight="1"
                                        android:paddingStart="10dp"
                                        android:paddingTop="2dp"
                                        android:text="@string/movie_title"
                                        android:textColor="@color/colorBlack"
                                        android:textStyle="bold"
                                        tools:ignore="NestedWeights,RtlSymmetry" />

                                    <LinearLayout
                                        android:layout_width="90dp"
                                        android:layout_height="20dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageButton
                                            android:id="@+id/icon_comments2"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@color/colorBlanco"
                                            design:srcCompat="@android:drawable/sym_action_chat" />

                                        <TextView
                                            android:id="@+id/text_numberComments2"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:contentDescription="@string/num_comments"
                                            android:paddingTop="6dp"
                                            android:text="@string/num_comments" />

                                    </LinearLayout>

                                </LinearLayout>

                                <ImageButton
                                    android:id="@+id/img_right2"
                                    android:layout_width="10dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorBlanco"
                                    android:contentDescription="@string/button_right"
                                    design:srcCompat="@drawable/ic_right48" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_list3"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:background="@drawable/botton_style"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_list3"
                                    android:layout_width="10dp"
                                    android:layout_height="70dp"
                                    android:layout_weight="1"
                                    android:contentDescription="@string/img_list4"
                                    android:scaleType="fitXY"
                                    design:srcCompat="@drawable/blade19" />

                                <LinearLayout
                                    android:id="@+id/layout_descriptionList3"
                                    android:layout_width="220dp"
                                    android:layout_height="70dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text_title3"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:layout_weight="1"
                                        android:paddingStart="10dp"
                                        android:paddingTop="2dp"
                                        android:text="@string/movie_title"
                                        android:textColor="@color/colorBlack"
                                        android:textStyle="bold"
                                        tools:ignore="NestedWeights,RtlSymmetry" />

                                    <LinearLayout
                                        android:layout_width="90dp"
                                        android:layout_height="20dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageButton
                                            android:id="@+id/icon_comments3"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@color/colorBlanco"
                                            design:srcCompat="@android:drawable/sym_action_chat" />

                                        <TextView
                                            android:id="@+id/text_numberComments3"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:contentDescription="@string/num_comments"
                                            android:paddingTop="6dp"
                                            android:text="@string/num_comments" />

                                    </LinearLayout>

                                </LinearLayout>

                                <ImageButton
                                    android:id="@+id/img_right3"
                                    android:layout_width="10dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorBlanco"
                                    android:contentDescription="@string/button_right"
                                    design:srcCompat="@drawable/ic_right48" />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/tab1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <GridView
                                android:id="@+id/listView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:columnWidth="136dp"
                                android:gravity="center"
                                android:horizontalSpacing="1dp"
                                android:numColumns="3"
                                android:stretchMode="spacingWidthUniform"
                                android:verticalSpacing="1dp" />

                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
            </TabHost>

        </LinearLayout>
   <!-- </ScrollView>-->


    <!--Bottom navigation code-->
    <!--Match-parent is all the screen weight -->


    <FrameLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_gravity="bottom"
        android:background="#ffff">

        <!--shadow.xml inside-->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="top"
            android:background="@drawable/shadow" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            app:menu="@menu/menu_navigation" />
        <!-- android:layout_height="wrap_content"
         ALT+ENTER on design to add namespaces-->
        <!---->
    </FrameLayout>
    <!--</RelativeLayout>-->
</android.support.design.widget.CoordinatorLayout>
