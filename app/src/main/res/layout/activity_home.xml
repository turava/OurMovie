                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/botton_style"
                                android:fontFamily="@font/amiko"
                                android:text="Drama"
                                android:textAllCaps="false"
                                android:textColor="#505254" />
                        </LinearLayout>

                        <LinearLayout
