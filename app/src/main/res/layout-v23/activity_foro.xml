<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e6e4"
    tools:context="com.example.kseniyaturava.mytest.MainActivity">

    <ScrollView
        android:id="@+id/scroll_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e5e6e4"
        android:minHeight="1200dp">

        <LinearLayout
            android:id="@+id/layout_foro1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e5e6e4"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:background="@color/colorBlanco"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/matrix1"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/Movie"
                            android:scaleType="fitXY"
                            design:srcCompat="@drawable/matrix1"
                            tools:ignore="NestedWeights" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorBlanco"

                        android:orientation="vertical"
                        android:paddingStart="10dp">

                        <TextView
                            android:id="@+id/text_movie"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:text="@string/title_movie_foro"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/text_director"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/director_foro" />

                        <TextView
                            android:id="@+id/text_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/date_movie" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp">

                        <ImageButton
                            android:id="@+id/button_info"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/colorBlanco"
                            android:contentDescription="@string/icon_info"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_info" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_postBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/indivdual_box"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_post1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/layout_User1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_user1"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="false"

                            android:contentDescription="@string/img_post1"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            design:srcCompat="@drawable/blade19" />

                        <LinearLayout
                            android:id="@+id/layout_userName_Date1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_username1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/username_post"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="NestedWeights" />

                            <TextView
                                android:id="@+id/text_date1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/date_post"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_comment1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingEnd="10dp"
                        android:text="@string/comment_post"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="220dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/button_reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorBlanco"
                            android:contentDescription="@string/icon_reply0"
                            app:srcCompat="@drawable/ic_reply1" />

                        <ImageButton
                            android:id="@+id/button_comments"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@color/colorBlanco"
                            android:contentDescription="@string/icon_comment"
                            design:srcCompat="@android:drawable/sym_action_chat" />

                        <TextView
                            android:id="@+id/text_numberAnswers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="@string/number_comments"
                            android:textAlignment="center"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_acordeon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/layout_replyAordeon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="top"
                                android:background="@drawable/line_top_foro" />

                            <LinearLayout
                                android:id="@+id/layout_photoUserR"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_userReply"
                                    android:layout_width="60dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="false"
                                    android:contentDescription="@string/todo"
                                    android:cropToPadding="false"
                                    android:scaleType="fitXY"
                                    design:srcCompat="@drawable/blade19" />

                                <LinearLayout
                                    android:id="@+id/layout_userReply"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text_usernameReply"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="García Lorca"
                                        android:textColor="@color/background2"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/text_dateReply"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Hoy a las 17:00" />
                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/text_reply"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="El año que viene saldrá la 7a, estoy impaciente..."
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_reply2Aordeon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="top"
                                android:background="@drawable/line_top_foro" />

                            <LinearLayout
                                android:id="@+id/layout_photo2UserR"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_user2Reply"
                                    android:layout_width="60dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="false"
                                    android:contentDescription="@string/todo"
                                    android:cropToPadding="false"
                                    android:scaleType="fitXY"
                                    design:srcCompat="@drawable/blade19" />

                                <LinearLayout
                                    android:id="@+id/layout_user2Reply"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text_username2Reply"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="García Lorca"
                                        android:textColor="@color/background2"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/text_date2Reply"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Hoy a las 17:00" />
                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/text_reply2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="El año que viene saldrá la 7a, estoy impaciente..."
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_inputReply"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/view"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="top"
                                android:background="@drawable/line_top_foro" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/layout_fileReply"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="40dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="1dp"
                                        android:layout_marginStart="1dp"
                                        android:layout_weight="1"
                                        design:srcCompat="@drawable/blade19" />

                                    <ImageView
                                        android:id="@+id/imageView9"
                                        android:layout_width="40dp"
                                        android:layout_height="60dp"
                                        android:layout_marginEnd="1dp"
                                        android:layout_marginStart="1dp"
                                        android:layout_weight="1"
                                        design:srcCompat="@drawable/blade2" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:id="@+id/button_addFilesReply"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@color/colorBlanco"
                                        android:contentDescription="@string/icon_addfile"
                                        android:paddingTop="6dp"
                                        design:srcCompat="@drawable/ic_file" />

                                    <LinearLayout
                                        android:id="@+id/layout_2inputReply"
                                        android:layout_width="240dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/botton_style"
                                        android:orientation="vertical"
                                        android:visibility="visible">

                                        <AutoCompleteTextView
                                            android:id="@+id/input_reply"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="sans-serif"
                                            android:text="@string/mensaje"
                                            android:textAlignment="viewStart"
                                            android:textAppearance="@style/TextAppearance.AppCompat"
                                            android:textColor="@color/background2"
                                            android:textColorHighlight="@android:color/transparent"
                                            android:textColorLink="@color/foroButton"
                                            android:textCursorDrawable="@color/foroButton" />
                                    </LinearLayout>

                                    <ImageButton
                                        android:id="@+id/button_sendReply"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@color/colorBlanco"
                                        android:contentDescription="@string/icon_sendMessage"
                                        design:srcCompat="@android:drawable/ic_menu_send" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_postBox2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/indivdual_box"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_post12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/layout_User3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_user3"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="false"
                            android:contentDescription="@string/todo"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            design:srcCompat="@drawable/blade19" />

                        <LinearLayout
                            android:id="@+id/layout_userName_Date3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_username3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/username_post2"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="NestedWeights" />

                            <TextView
                                android:id="@+id/text_date3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/date_post2"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            design:srcCompat="@drawable/american" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            design:srcCompat="@drawable/pie" />

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            design:srcCompat="@drawable/blade19" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_comment4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/comment_post2"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="220dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/button_reply1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorBlanco"
                            android:contentDescription="@string/icon_reply"
                            app:srcCompat="@drawable/ic_reply1" />

                        <ImageButton
                            android:id="@+id/button_comment1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@color/colorBlanco"
                            android:contentDescription="@string/icon_comment2"
                            design:srcCompat="@android:drawable/sym_action_chat" />

                        <TextView
                            android:id="@+id/text_numberAnswers1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="@string/number_comments"
                            android:textAlignment="center"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_gravity="bottom"
        android:background="@color/colorBlanco">

        <!--shadow.xml inside-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_file"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView33"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1"
                    design:srcCompat="@drawable/blade19" />

                <ImageView
                    android:id="@+id/imageView34"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1"
                    design:srcCompat="@drawable/blade2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_addFiles"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/colorBlanco"
                    android:contentDescription="@string/icon_addfile"
                    android:paddingTop="6dp"
                    design:srcCompat="@drawable/ic_file" />

                <LinearLayout
                    android:id="@+id/layour_input"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:id="@+id/input_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botton_style"
                        android:fontFamily="sans-serif"
                        android:minHeight="30dp"
                        android:text="@string/mensaje"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/background2"
                        android:textColorHighlight="@android:color/transparent"
                        android:textColorLink="@color/foroButton"
                        android:textCursorDrawable="@color/foroButton" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/button_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorBlanco"
                    android:contentDescription="@string/icon_sendMessage"
                    design:srcCompat="@android:drawable/ic_menu_send" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="top"
            android:background="@drawable/shadow" />

        <!-- android:layout_height="wrap_content"
         ALT+ENTER on design to add namespaces-->
        <!---->
    </FrameLayout>
    <!--</RelativeLayout>-->

</android.support.design.widget.CoordinatorLayout>
