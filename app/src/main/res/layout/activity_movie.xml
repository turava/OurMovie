<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kseniyaturava.mytest.MovieActivity">

    <LinearLayout
        android:id="@+id/layout_content_vert"
        android:layout_width="370dp"
        android:layout_height="240dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/botton_style"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="120dp"
            android:layout_height="190dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/american" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Título de la Película"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:text="12 enero 2012" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:text="Drama" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:text="Lorem ipsum nosequantorum porquorum latin is antiquorum, i pesque indefinidus il textus est, nus adentrus in peliculus mes plus mes" />

            <Button
                android:id="@+id/button_foro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_foro"
                android:text="Foro"
                android:textColor="#E71D36" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
